{
	"name": "ink-testing-library",
	"version": "2.0.0",
	"description": "Utilities for testing Ink apps",
	"license": "MIT",
	"repository": "vadimdemedes/ink-testing-library",
	"author": {
		"name": "Vadim Demedes",
		"email": "vdemedes@gmail.com",
		"url": "github.com/vadimdemedes/ink-testing-library"
	},
	"main": "build",
	"types": "build/index.d.ts",
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"prepare": "tsc",
		"build": "tsc",
		"test": "tsc && xo && ava && jest"
	},
	"files": [
		"build"
	],
	"keywords": [
		"ink",
		"cli",
		"test"
	],
	"dependencies": {
		"@types/node": "^14.0.13",
		"@types/react": "^16.9.38"
	},
	"devDependencies": {
		"@ava/babel": "^1.0.1",
		"@babel/preset-react": "^7.0.0",
		"@sindresorhus/tsconfig": "^0.7.0",
		"ava": "^3.9.0",
		"babel-jest": "^26.1.0",
		"delay": "^4.3.0",
		"eslint-config-xo-react": "^0.19.0",
		"eslint-plugin-ava": "^10.3.1",
		"eslint-plugin-react": "^7.12.4",
		"eslint-plugin-react-hooks": "^1.4.0",
		"ink": "^3.0.0-1",
		"jest": "^26.1.0",
		"react": "^16.8.4",
		"typescript": "^3.9.5",
		"xo": "^0.32.0"
	},
	"ava": {
		"files": [
			"test.js"
		],
		"babel": true
	},
	"jest": {
		"testMatch": [
			"**/jest.test.js"
		]
	},
	"xo": {
		"extends": "xo-react",
		"overrides": [
			{
				"files": "jest.test.js",
				"env": "jest"
			}
		]
	},
	"babel": {
		"presets": [
			"@babel/preset-react"
		]
	}
}
